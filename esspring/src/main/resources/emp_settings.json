{
	"settings": {
		"number_of_shards": 1,
		"analysis": {
			"filter": {
				"ngram_filter": {
					"type": "ngram",
					"min_gram": 2,
					"max_gram": 20
				}
			},
			"analyzer": {
				"ngram_analyzer": {
					"type": "custom",
					"tokenizer": "standard",
					"filter": [
						"lowercase",
						"ngram_filter"
					]
				}
			}
		}
	},
	"mappings": {
		"emp": {
			"properties": {
				"firstName": {
					"type": "string",
					"include_in_all": false,
					"index_analyzer": "ngram_analyzer",
					"search_analyzer": "ngram_analyzer"
				},
				"lastName": {
					"type": "string",
					"include_in_all": false,
					"index_analyzer": "ngram_analyzer",
					"search_analyzer": "ngram_analyzer"
				}
			}
		},
		"dept": {
			"properties": {
				"deptName": {
					"type": "string",
					"include_in_all": false,
					"index_analyzer": "ngram_analyzer",
					"search_analyzer": "ngram_analyzer"
				}
			}
		}

	}
}